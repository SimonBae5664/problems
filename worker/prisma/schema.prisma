// Worker uses the same schema as backend
// This is a symlink or copy of backend/prisma/schema.prisma
// For Docker builds, we'll copy the schema from backend

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

